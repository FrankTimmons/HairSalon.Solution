@{
  Layout = "_Layout";
}
@using HairSalon.Models;
@model HairSalon.Models.Stylist

<h2>@Html.DisplayFor(model => model.Name) Details: </h2>
<p>Phone Number: @Html.DisplayFor(model => model.Phone)</p>

@foreach (Client client in Model.Clients)
{
  <li>@Html.ActionLink($"{client.Name}", "Details", "Client", new { id = client.ClientId })</li>
}

<p>@Html.ActionLink("Add New Client", "Create", "Client")</p>
<p>@Html.ActionLink("Edit Stylist", "Edit", new { id = Model.StylistId })</p>
<p>@Html.ActionLink("Delete Stylist", "Delete", new { id = Model.StylistId })</p>
<p>@Html.ActionLink("Back to list", "Index")</p>